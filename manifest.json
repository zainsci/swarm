{
  "manifest_version": 2,
  "name": "Aristotle",
  "version": "0.1",
  "description": "For Kanji Learning",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab"],
  "chrome_url_overrides": {
    "newtab": "/new-tab/index.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true,
    "type": "module"
  },
  "action": {
    "default_title": "Play Randome Audio!",
    "default_icon": "media/icon.png"
  }
}
